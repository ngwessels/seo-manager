{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "target": "es6",
    "module": "esnext",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**"],
  "files": ["src/index.d.ts", "src/firebase.ts"]
}
