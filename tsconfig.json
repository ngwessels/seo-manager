{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "ES2020",
    "declaration": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "pretty": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "strict": true,
    "outDir": "dist",
    "baseUrl": "src/",
    "rootDir": "src",
    "listFiles": false,
    "noEmitHelpers": true
  },
  "include": ["src/**/*", "../init.js"],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
